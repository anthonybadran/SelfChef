@model SelfChef.Models.Recipes

@{
    ViewData["Title"] = "Ingredients";
}

<div class="row">
    <div class="col-12 col-sm-9 col-md-7 col-lg-5 mx-auto mt-5">
        <div class="shadow bg-white p-4 rounded">
            <div class="px-2">
                <h3>Search by Ingredients</h3>
                <form method="post" enctype="multipart/form-data" asp-controller="Ingredients" asp-action="Search" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col mt-4">
                            <label class="control-label">Recipe or Keyword</label>
                            <input id="term" name="term" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mt-4">
                            <label class="control-label" for="include">Included Ingredients</label>
                            <input id="include" name="include" class="form-control" data-role="tagsinput" />
                            <span class="help-block text-muted small">Press 'Enter' after each ingredient.</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mt-4">
                            <label class="control-label" for="exclude">Excluded Ingredients</label>
                            <input id="exclude" name="exclude" class="form-control" data-role="tagsinput" />
                            <span class="help-block text-muted small">Press 'Enter' after each ingredient.</span>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <div class="form-group">
                                <button id="submit-all" type="submit" class="btn btn-success float-right">Search</button>
                                <a class="btn btn-secondary d float-right mr-2" asp-controller="Home" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}