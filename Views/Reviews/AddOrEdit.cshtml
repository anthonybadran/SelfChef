@model SelfChef.Models.RecipeReviews

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.ReviewID" onsubmit="return jQueryAjaxPost(this);" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewID" />
            <input type="hidden" asp-for="RecipeID" value="@ViewBag.recipe" />
            <input type="hidden" asp-for="AuthorID" value="@ViewBag.author" />
            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <select id="rating-select" asp-for="Rating" class="custom-select" required>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <div class="invalid-feedback">
                            Rating is required.
                        </div>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea id="description" asp-for="Description" class="form-control" rows="5" placeholder="Write a detailed review (optional)."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 offset-md-3">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success btn-block" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>