@{
    ViewData["Title"] = "Recipe";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SelfChef</title>
    <link rel="icon" href="~/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/slick/slick-theme.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/icons/icofont.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/theme.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/sidebar/demo.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="border-bottom p-3 d-none mobile-nav">
            <div class="row title d-flex align-items-center">
                <div class="col-6">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-dark">
                        <img class="mr-2" style="width: 40%" src="~/img/logo.png" />
                    </a>
                </div>
                <div class="col-6">
                    <a class="toggle" href="#" style="float:right">
                        <i class="icofont-navigation-menu"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="bg-white shadow-sm osahan-main-nav">
            <nav class="navbar navbar-expand-lg navbar-light bg-white osahan-header py-0 container">
                <div class="d-flex align-items-start" style="width:50%">
                    <a class="mr-auto navbar-brand mr-0" asp-controller="Home" asp-action="Index">
                        <img class="ml-auto img-fluid logo-img" src="~/img/logo.png" />
                    </a>
                </div>
                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex align-items-end" style="width:50%">
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-sm-5 mx-auto mt-3">
                    <div class="shadow bg-white p-4 rounded">
                        <div class="px-2">
                            <h3 class="my-0">Let's get started</h3>
                            <p class="small mb-4">
                                Create account to get access to all the features!
                            </p>
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="form-group text-danger"></div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Input.FirstName"></label>
                                            <input asp-for="Input.FirstName" class="form-control" />
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Input.LastName"></label>
                                            <input asp-for="Input.LastName" class="form-control" />
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.ConfirmPassword"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <button type="submit"
                                        class="btn btn-success rounded btn-lg btn-block">
                                    Create Account
                                </button>
                            </form>
                            <p class="text-muted text-center small py-2 m-0">or</p>
                            @*<a asp-controller="GoogleAuth" asp-action="GoogleLogin" class="btn btn-light border btn-block rounded btn-lg btn-google">
                        <i class="icofont-google-plus text-danger mr-2"></i> Sign Up with Google
                    </a>*@
                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {
                                    <div>
                                    </div>
                                }
                                else
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div>
                                            <p>
                                                @foreach (var provider in Model.ExternalLogins)
                                                {
                                                    if (provider.Name == "Google")
                                                    {
                                                        <button type="submit" class="btn btn-light border btn-block rounded btn-lg btn-google" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                            <i class="icofont-google-plus text-danger mr-2"></i> Sign In with Google
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="submit" class="btn btn-light border btn-block rounded btn-lg" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                                    }
                                                }
                                            </p>
                                        </div>
                                    </form>
                                }
                            }
                            <p class="text-center mt-3 mb-0">
                                <span class="text-dark ml-auto mr-1 hidden-sm-down">
                                    Already a member?
                                </span>
                                <a class="text-dark ml-auto ml-sm-0" asp-area="Identity" asp-page="/Account/Login">
                                    <strong>Sign In</strong>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <nav id="main-nav">
        <ul class="second-nav">
            <li>
                <a href="home.html"><i class="icofont-smart-phone mr-2"></i> Home</a>
            </li>
        </ul>
    </nav>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Self-Chef
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/slick/slick.min.js"></script>
    <script src="~/lib/sidebar/hc-offcanvas-nav.js"></script>
    <script src="~/js/osahan.js"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>